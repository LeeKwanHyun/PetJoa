<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/textColorLinkInverse"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/iv_petjoa"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/intro_petjoa"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/iv_dogcat"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/intro_char"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"/>

    <EditText
        android:id="@+id/et_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:hint="아이디를 입력하세요."
        android:inputType="text"
        android:maxLines="1"
        android:ems="15"
        android:layout_below="@+id/iv_dogcat"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_bg"/>
    <EditText
        android:id="@+id/et_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:hint="비밀번호를 입력하세요."
        android:inputType="textPassword"
        android:maxLines="1"
        android:ems="15"
        android:layout_below="@+id/et_id"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_bg"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btn_Join"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@+id/et_pw"
        android:layout_marginTop="4dp"
        android:text="회원가입"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:backgroundTint="#D0D5C9"
        android:onClick="clickJoin"
        android:layout_alignLeft="@+id/et_pw"/>
    <Button
        android:id="@+id/btn_Login"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@+id/et_pw"
        android:layout_marginTop="4dp"
        android:text="로그인"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:backgroundTint="#D0D5C9"
        android:onClick="clickLogin"
        android:layout_alignRight="@+id/et_pw"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/kakao_login_medium_wide"
        android:background="@android:color/transparent"
        android:layout_below="@+id/btn_Login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:onClick="clickKakao"/>











</RelativeLayout>