<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:elevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">


        <TextView
            android:id="@+id/tv_cat_ifm_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="고양이에 대한 정보 알려드립니다."
            android:textSize="20dp"
            android:textColor="#FF333333"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tv_cat_ifm_msg"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="고양이는 캣잎을 좋아해요"
            android:ellipsize="end"
            android:layout_below="@+id/tv_cat_ifm_title"/>

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작성자"
            android:layout_alignParentBottom="true"/>


        <TextView
            android:id="@+id/tv_cat_ifm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="고양이"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FF333333"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/tv"
            android:layout_alignParentBottom="true"/>



        <TextView
            android:id="@+id/tv_cat_ifm_date"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="2021.09.06 10:20:23"
            android:textSize="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>



    </RelativeLayout>



</com.google.android.material.card.MaterialCardView>